$('.answer-errors').html('<%= render 'shared/errors', resource: @answer %>');

<% unless @answer.errors.present? %>
 $('.answers').empty();
  <% unless @best_answer.nil? %>
    $('.answers').append('<div class="best-answer"/>')
    $('.best-answer').append('<%= j render @best_answer %>');
  <% end %>
  $('.answers').append('<%= j render @other_answers %>');
<% end %>